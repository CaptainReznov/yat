<div class="panel-stat-primary">
  <button class="panel-stat-button" {{action "createResource"}} disabled={{createDisabled}}>{{resource.name}}</button>
  {{#if resource.destroyCosts}}
    <button class="panel-stat-button" {{action "destroyResource"}} disabled={{destroyDisabled}}>-</button>
  {{/if}}
  <span class="panel-stat-amount">
    {{measurement-unit amount=resource.amount unit=resource.unit}}
  </span>
</div>
<div class="panel-stat-secondary">
  cost:
  {{#each resource.costs as |cost|}}
    {{measurement-unit amount=cost.amount unit=cost.source.unit}} {{fallthrough cost.source.shortName cost.source.name}};
  {{/each}}
</div>

{{#if resource.destroyCosts}}
  <div class="panel-stat-secondary">
    decrease cost:
    {{#each resource.destroyCosts as |cost|}}
      {{measurement-unit amount=cost.amount unit=cost.source.unit}} {{fallthrough cost.source.shortName cost.source.name}};
    {{/each}}
  </div>
{{/if}}
